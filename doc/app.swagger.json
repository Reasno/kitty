{
  "swagger": "2.0",
  "info": {
    "title": "A kitty app",
    "version": "1.0"
  },
  "basePath": "/app",
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/v1/bind": {
      "post": {
        "summary": "用户已登录后，绑定额外的手机号或微信号",
        "operationId": "App_Bind",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/v1UserInfoReply"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/v1UserBindRequest"
            }
          }
        ],
        "tags": [
          "App"
        ]
      }
    },
    "/v1/code": {
      "get": {
        "summary": "获得验证码",
        "operationId": "App_GetCode",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/v1GenericReply"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "mobile",
            "in": "query",
            "required": false,
            "type": "string"
          }
        ],
        "tags": [
          "App"
        ]
      }
    },
    "/v1/info": {
      "post": {
        "summary": "更新个人信息",
        "operationId": "App_UpdateInfo",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/v1UserInfoReply"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/v1UserInfoUpdateRequest"
            }
          }
        ],
        "tags": [
          "App"
        ]
      }
    },
    "/v1/info/{id}": {
      "get": {
        "summary": "获取任意用户信息，填0获取本人信息",
        "operationId": "App_GetInfo",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/v1UserInfoReply"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "format": "uint64"
          }
        ],
        "tags": [
          "App"
        ]
      }
    },
    "/v1/login": {
      "post": {
        "summary": "用户从未登录状态注册或登录时调用。如果用户已登录，需要绑定手机号或微信号，请使用bind接口。",
        "operationId": "App_Login",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/v1UserInfoReply"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/v1UserLoginRequest"
            }
          }
        ],
        "tags": [
          "App"
        ]
      }
    },
    "/v1/refresh": {
      "post": {
        "summary": "JWT Token续期，需要在每次升级系统或每次冷启动前调用，避免jwt中的信息与实际信息不一致",
        "operationId": "App_Refresh",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/v1UserInfoReply"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/v1UserRefreshRequest"
            }
          }
        ],
        "tags": [
          "App"
        ]
      }
    },
    "/v1/unbind": {
      "post": {
        "summary": "Unbind 针对已登录用户，额外绑定手机或微信登录方式",
        "operationId": "App_Unbind",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/v1UserInfoReply"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/v1UserUnbindRequest"
            }
          }
        ],
        "tags": [
          "App"
        ]
      }
    }
  },
  "definitions": {
    "DeviceOS": {
      "type": "string",
      "enum": [
        "OS_UNKNOWN",
        "IOS",
        "ANDROID"
      ],
      "default": "OS_UNKNOWN"
    },
    "appv1Gender": {
      "type": "string",
      "enum": [
        "GENDER_UNKNOWN",
        "GENDER_MALE",
        "GENDER_FEMALE"
      ],
      "default": "GENDER_UNKNOWN"
    },
    "protobufAny": {
      "type": "object",
      "properties": {
        "typeUrl": {
          "type": "string"
        },
        "value": {
          "type": "string",
          "format": "byte"
        }
      }
    },
    "rpcStatus": {
      "type": "object",
      "properties": {
        "code": {
          "type": "integer",
          "format": "int32"
        },
        "message": {
          "type": "string"
        },
        "details": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/protobufAny"
          }
        }
      }
    },
    "v1Device": {
      "type": "object",
      "properties": {
        "imei": {
          "type": "string"
        },
        "idfa": {
          "type": "string"
        },
        "androidId": {
          "type": "string"
        },
        "suuid": {
          "type": "string"
        },
        "mac": {
          "type": "string"
        },
        "os": {
          "$ref": "#/definitions/DeviceOS"
        },
        "oaid": {
          "type": "string"
        }
      }
    },
    "v1GenericReply": {
      "type": "object",
      "properties": {
        "code": {
          "type": "integer",
          "format": "int32"
        },
        "message": {
          "type": "string"
        }
      }
    },
    "v1UserBindRequest": {
      "type": "object",
      "properties": {
        "mobile": {
          "type": "string",
          "pattern": "(^$|^[\\d]{11}$)"
        },
        "code": {
          "type": "string"
        },
        "wechat": {
          "type": "string"
        },
        "openId": {
          "type": "string",
          "title": "如果有openid 就直接走openid"
        }
      }
    },
    "v1UserInfo": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uint64"
        },
        "userName": {
          "type": "string"
        },
        "wechat": {
          "type": "string"
        },
        "headImg": {
          "type": "string"
        },
        "gender": {
          "$ref": "#/definitions/appv1Gender"
        },
        "birthday": {
          "type": "string"
        },
        "token": {
          "type": "string"
        }
      }
    },
    "v1UserInfoReply": {
      "type": "object",
      "properties": {
        "code": {
          "type": "integer",
          "format": "int32"
        },
        "message": {
          "type": "string"
        },
        "data": {
          "$ref": "#/definitions/v1UserInfo"
        }
      }
    },
    "v1UserInfoUpdateRequest": {
      "type": "object",
      "properties": {
        "userName": {
          "type": "string",
          "maximum": 10,
          "minimum": 2
        },
        "headImg": {
          "type": "string",
          "pattern": "^(|https?://.*)$"
        },
        "gender": {
          "$ref": "#/definitions/appv1Gender"
        },
        "birthday": {
          "type": "string",
          "pattern": "^(|\\d{4}-\\d{1,2}-\\d{1,2})$"
        }
      }
    },
    "v1UserLoginRequest": {
      "type": "object",
      "properties": {
        "mobile": {
          "type": "string",
          "pattern": "(^$|^[\\d]{11}$)"
        },
        "code": {
          "type": "string"
        },
        "wechat": {
          "type": "string",
          "title": "手机发起微信登录的token，非openid"
        },
        "device": {
          "$ref": "#/definitions/v1Device"
        },
        "channel": {
          "type": "string",
          "required": [
            "true"
          ]
        },
        "versionCode": {
          "type": "string",
          "required": [
            "true"
          ]
        }
      }
    },
    "v1UserRefreshRequest": {
      "type": "object",
      "properties": {
        "device": {
          "$ref": "#/definitions/v1Device"
        },
        "channel": {
          "type": "string",
          "required": [
            "true"
          ]
        },
        "versionCode": {
          "type": "string",
          "required": [
            "true"
          ]
        }
      },
      "title": "UserRefreshRequest Token续期"
    },
    "v1UserUnbindRequest": {
      "type": "object",
      "properties": {
        "mobile": {
          "type": "boolean"
        },
        "wechat": {
          "type": "boolean"
        }
      }
    }
  },
  "securityDefinitions": {
    "JWT": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header"
    }
  },
  "security": [
    {
      "JWT": []
    }
  ]
}
