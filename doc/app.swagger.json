{
  "swagger": "2.0",
  "info": {
    "title": "商业化中台用户中心",
    "version": "2.0.0",
    "contact": {
      "name": "谷溪",
      "email": "guxi@infinities.com.cn"
    }
  },
  "basePath": "/app/v2",
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/bind": {
      "post": {
        "summary": "用户已登录后，绑定额外的手机号或微信号。\n本接口会返回新的token，后续请求务必请将老JWT替换为新token。",
        "operationId": "App_Bind",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/v2UserInfoReply"
            }
          }
        },
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/v2UserBindRequest"
            }
          }
        ],
        "tags": [
          "用户信息"
        ]
      }
    },
    "/code": {
      "get": {
        "summary": "获得验证码",
        "operationId": "App_GetCode",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/v2GenericReply"
            }
          }
        },
        "parameters": [
          {
            "name": "mobile",
            "in": "query",
            "required": false,
            "type": "string"
          },
          {
            "name": "packageName",
            "in": "query",
            "required": false,
            "type": "string"
          }
        ],
        "tags": [
          "登录"
        ]
      }
    },
    "/info": {
      "post": {
        "summary": "更新个人信息\n本接口会返回新的token，后续请求务必请将老JWT替换为新token。",
        "operationId": "App_UpdateInfo",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/v2UserInfoReply"
            }
          }
        },
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/v2UserInfoUpdateRequest"
            }
          }
        ],
        "tags": [
          "用户信息"
        ]
      }
    },
    "/info/{id}": {
      "get": {
        "summary": "获取任意用户信息，填0获取本人信息",
        "operationId": "App_GetInfo",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/v2UserInfoReply"
            }
          }
        },
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "format": "uint64"
          },
          {
            "name": "wechat",
            "description": "同时获得微信相关信息.",
            "in": "query",
            "required": false,
            "type": "boolean"
          },
          {
            "name": "taobao",
            "description": "同时获得淘宝相关信息.",
            "in": "query",
            "required": false,
            "type": "boolean"
          }
        ],
        "tags": [
          "用户信息"
        ]
      }
    },
    "/login": {
      "post": {
        "summary": "用户从未登录状态注册或登录时调用。如果用户已登录，需要绑定手机号或微信号，请使用bind接口。",
        "operationId": "App_Login",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/v2UserInfoReply"
            }
          }
        },
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/v2UserLoginRequest"
            }
          }
        ],
        "tags": [
          "登录"
        ]
      }
    },
    "/refresh": {
      "post": {
        "summary": "JWT Token续期，需要在每次升级系统或每次冷启动前调用，\n避免jwt中的信息与实际信息不一致。本接口会返回新的JWT，\n后续请求务必请将老JWT替换为新JWT。",
        "operationId": "App_Refresh",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/v2UserInfoReply"
            }
          }
        },
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/v2UserRefreshRequest"
            }
          }
        ],
        "tags": [
          "登录"
        ]
      }
    },
    "/unbind": {
      "post": {
        "summary": "针对已登录用户，取消绑定手机或微信登录方式\n本接口会返回新的token，后续请求务必请将老JWT替换为新token。",
        "operationId": "App_Unbind",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/v2UserInfoReply"
            }
          }
        },
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/v2UserUnbindRequest"
            }
          }
        ],
        "tags": [
          "用户信息"
        ]
      }
    }
  },
  "definitions": {
    "DeviceOS": {
      "type": "string",
      "enum": [
        "OS_UNKNOWN",
        "IOS",
        "ANDROID"
      ],
      "default": "OS_UNKNOWN"
    },
    "v2Device": {
      "type": "object",
      "properties": {
        "imei": {
          "type": "string"
        },
        "idfa": {
          "type": "string"
        },
        "android_id": {
          "type": "string"
        },
        "suuid": {
          "type": "string"
        },
        "mac": {
          "type": "string",
          "title": "MAC 地址"
        },
        "os": {
          "$ref": "#/definitions/DeviceOS",
          "title": "1 苹果，2 安卓"
        },
        "oaid": {
          "type": "string"
        }
      }
    },
    "v2Gender": {
      "type": "string",
      "enum": [
        "GENDER_UNKNOWN",
        "GENDER_MALE",
        "GENDER_FEMALE"
      ],
      "default": "GENDER_UNKNOWN"
    },
    "v2GenericReply": {
      "type": "object",
      "properties": {
        "code": {
          "type": "integer",
          "format": "int32"
        },
        "message": {
          "type": "string",
          "title": "deprecated"
        },
        "msg": {
          "type": "string"
        }
      }
    },
    "v2TaobaoExtra": {
      "type": "object",
      "properties": {
        "user_id": {
          "type": "string"
        },
        "open_sid": {
          "type": "string"
        },
        "top_access_token": {
          "type": "string"
        },
        "avatar_url": {
          "type": "string"
        },
        "havana_sso_token": {
          "type": "string"
        },
        "nick": {
          "type": "string"
        },
        "open_id": {
          "type": "string"
        },
        "top_auth_code": {
          "type": "string"
        },
        "top_expire_time": {
          "type": "string"
        }
      }
    },
    "v2UserBindRequest": {
      "type": "object",
      "properties": {
        "mobile": {
          "type": "string",
          "title": "手机号",
          "pattern": "(^$|^[\\d]{11}$)"
        },
        "code": {
          "type": "string",
          "title": "手机验证码（配合手机号使用）"
        },
        "wechat": {
          "type": "string",
          "title": "微信官方下发的临时code码，非openId"
        },
        "openId": {
          "type": "string",
          "title": "废弃，请使用wechat_extra.openId"
        },
        "taobao_extra": {
          "$ref": "#/definitions/v2TaobaoExtra",
          "title": "绑定淘宝"
        },
        "wechat_extra": {
          "$ref": "#/definitions/v2WechatExtra",
          "title": "如果有openId 就直接走openId，不用再填微信官方下发的临时code码"
        }
      }
    },
    "v2UserInfo": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uint64"
        },
        "user_name": {
          "type": "string"
        },
        "wechat": {
          "type": "string"
        },
        "head_img": {
          "type": "string",
          "title": "头像地址"
        },
        "gender": {
          "$ref": "#/definitions/v2Gender"
        },
        "birthday": {
          "type": "string"
        },
        "token": {
          "type": "string"
        },
        "third_party_id": {
          "type": "string",
          "title": "第三方ID"
        },
        "is_new": {
          "type": "boolean"
        },
        "wechat_extra": {
          "$ref": "#/definitions/v2WechatExtra"
        },
        "taobao_extra": {
          "$ref": "#/definitions/v2TaobaoExtra"
        },
        "mobile": {
          "type": "string"
        }
      }
    },
    "v2UserInfoReply": {
      "type": "object",
      "properties": {
        "code": {
          "type": "integer",
          "format": "int32"
        },
        "message": {
          "type": "string",
          "title": "deprecated"
        },
        "data": {
          "$ref": "#/definitions/v2UserInfo"
        },
        "msg": {
          "type": "string"
        }
      }
    },
    "v2UserInfoUpdateRequest": {
      "type": "object",
      "properties": {
        "user_name": {
          "type": "string",
          "title": "用户名",
          "maximum": 10,
          "minimum": 2
        },
        "head_img": {
          "type": "string",
          "title": "头像地址",
          "pattern": "^(|https?://.*)$"
        },
        "gender": {
          "$ref": "#/definitions/v2Gender",
          "title": "性别"
        },
        "birthday": {
          "type": "string",
          "title": "生日",
          "pattern": "^(|\\d{4}-\\d{1,2}-\\d{1,2})$"
        },
        "third_party_id": {
          "type": "string",
          "title": "第三方ID"
        }
      }
    },
    "v2UserLoginRequest": {
      "type": "object",
      "properties": {
        "mobile": {
          "type": "string",
          "title": "手机号",
          "pattern": "(^$|^[\\d]{11}$)"
        },
        "code": {
          "type": "string",
          "title": "手机验证码"
        },
        "wechat": {
          "type": "string",
          "title": "手机发起微信登录的token，非openid"
        },
        "device": {
          "$ref": "#/definitions/v2Device"
        },
        "channel": {
          "type": "string",
          "title": "渠道"
        },
        "version_code": {
          "type": "string",
          "title": "版本号",
          "pattern": "^[\\d]+$",
          "required": [
            "true"
          ]
        },
        "package_name": {
          "type": "string",
          "title": "包名",
          "required": [
            "true"
          ]
        },
        "third_party_id": {
          "type": "string",
          "title": "第三方ID"
        }
      }
    },
    "v2UserRefreshRequest": {
      "type": "object",
      "properties": {
        "device": {
          "$ref": "#/definitions/v2Device"
        },
        "channel": {
          "type": "string",
          "title": "渠道号"
        },
        "version_code": {
          "type": "string",
          "title": "版本号",
          "pattern": "^[\\d]+$",
          "required": [
            "true"
          ]
        }
      },
      "title": "Token续期"
    },
    "v2UserUnbindRequest": {
      "type": "object",
      "properties": {
        "mobile": {
          "type": "boolean",
          "title": "true则解绑手机"
        },
        "wechat": {
          "type": "boolean",
          "title": "true则解绑微信"
        },
        "taobao": {
          "type": "boolean",
          "title": "true则解绑淘宝"
        }
      }
    },
    "v2WechatExtra": {
      "type": "object",
      "properties": {
        "access_token": {
          "type": "string"
        },
        "expires_in": {
          "type": "string",
          "format": "int64"
        },
        "refresh_token": {
          "type": "string"
        },
        "open_id": {
          "type": "string"
        },
        "scope": {
          "type": "string"
        },
        "nick_name": {
          "type": "string"
        },
        "sex": {
          "type": "integer",
          "format": "int32"
        },
        "province": {
          "type": "string"
        },
        "city": {
          "type": "string"
        },
        "country": {
          "type": "string"
        },
        "headimgurl": {
          "type": "string"
        },
        "privilege": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "unionid": {
          "type": "string"
        }
      }
    }
  },
  "securityDefinitions": {
    "JWT": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header"
    }
  },
  "security": [
    {
      "JWT": []
    }
  ],
  "externalDocs": {
    "description": "商业化中台文档",
    "url": "http://monetization-docs.xg.tagtic.cn/#/"
  }
}
